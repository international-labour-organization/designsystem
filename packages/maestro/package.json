{
  "name": "@ilo-org/maestro",
  "version": "1.0.1",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/international-labour-organization/designsystem.git",
    "directory": "packages/maestro"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "lib"
  ],
  "types": "./lib",
  "exports": {
    ".": {
      "import": "./lib/index.js",
      "require": "./lib/index.js"
    },
    "./plugin": {
      "import": "./lib/vite.js",
      "require": "./lib/vite.js"
    },
    "./storybook": {
      "import": "./lib/storybook.js",
      "require": "./lib/storybook.js"
    }
  },
  "scripts": {
    "dev": "vite build --watch",
    "build": "tsc && vite build",
    "build:lib": "pnpm build",
    "build:docs": "pnpm build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "@modyfi/vite-plugin-yaml": "^1.1.0",
    "@types/twig": "^1.12.16",
    "drupal-attribute": "^1.0.2",
    "drupal-twig-extensions": "^1.0.0-beta.5",
    "twig": "^1.16.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@ilo-org/eslint-config": "workspace:*",
    "@storybook/html": "^8.1.9",
    "@types/node": "^17.0.45",
    "typescript": "^4.9.3",
    "vite": "^5.3.1",
    "vite-plugin-dts": "^3.9.1"
  },
  "keywords": [
    "twig",
    "storybook",
    "drupal",
    "design system",
    "components"
  ]
}
