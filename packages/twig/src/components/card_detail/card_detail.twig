{# card_detail.twig #}

{% set theme = theme|default("light") %}
{% set iconColor = theme == "light" ? "var(--ilo-color-gray-charcoal)" : "var(--ilo-color-gray-light)" %}

<div class="{{prefix}}--card {{prefix}}--card__type__detail {{prefix}}--card__size__{{size}} {% if isvideo|boolval %} {{prefix}}--card__isvideo {% endif %} {{prefix}}--card__theme__{{theme}}">
	<a class="{{prefix}}--card--link" href="{{link}}" title="{{title}}">
		<span class="{{prefix}}--card--link--text">{{title}}</span>
	</a>
	<div class="{{prefix}}--card--wrap">
		{% if image %}
			<div class="{{prefix}}--card--image--wrapper">
				{% include "@components/picture/picture.twig" with {
          image: image,
          class: "card"
        }
      %}
			</div>
		{% endif %}
		<div class="{{prefix}}--card--content">
			{% if eyebrow %}
				<p class="{{prefix}}--card--eyebrow">{{eyebrow}}</p>
			{% endif %}
			{% if title %}
				<{{titleLevel|default('p')}} class="{{ prefix }}--card--title">{{ title }}</{{titleLevel|default('p')}}>
			{% endif %}
			{% if intro %}
				<p class="{{prefix}}--card--intro">{{intro}}</p>
			{% endif %}
			{% if date and not dateExtra %}
				<time class="{{prefix}}--card--date" datetime="{{date.unix}}">{{date.human}}</time>
			{% endif %}
			{% if dateExtra %}
				<p class="{{prefix}}--card--date-extra">
					{% include "@components/icon/icon.twig" with {
						name: "triangle_right",
						size: 20,
						color: iconColor
					} %}
					{{dateExtra}}
				</p>
			{% endif %}
		</div>
	</div>
</div>
