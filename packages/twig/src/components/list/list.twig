{# list.twig #}

{% if not ordered %}
	{% set ordered = "unstyled" %}
{% endif %}

{% if not theme %}
	{% set theme = "light" %}
{% endif %}

{% set titleLevel = titleLevel|default('h2') %}

<div class="{{prefix}}--list {% if ordered == 'unstyled' %} {{prefix}}--list__unstyled {% endif %} {% if alignment == 'horizontal' %} {{prefix}}--list__horizontal {% endif %} {{prefix}}--list__theme__{{theme}}">
	{% if title %}
		<{{ titleLevel }} class="{{prefix}}--list--title">{{ title }}</{{ titleLevel }}>
	{% endif %}
	{% if ordered == "ordered" %}
		<ol>
			{% for item in items %}
				{% include "@components/list/list-item.twig" with {
				prefix: prefix,
				content: item.content,
				elementId: item.id,
			} only %}
			{% endfor %}
		</ol>
	{% else %}
		<ul>
			{% for item in items %}
				{% include "@components/list/list-item.twig" with {
				prefix: prefix,
				content: item.content,
				elementId: item.id,
			} only %}
			{% endfor %}
		</ul>
	{% endif %}
</div>
