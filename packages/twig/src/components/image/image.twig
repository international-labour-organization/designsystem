{#
  IMAGE COMPONENT
#}
{% set theme = theme|default("light") %}
<figure class="{{prefix}}--image {{prefix}}--image__theme__{{theme}}" data-prefix="{{prefix}}">
  <div class="image {{prefix}}--image--wrapper">
    <picture {% if credit and ishero and ishero != 'false' %}title="{{credit}}"{% endif %}>
      {% for img in url|reverse %}
        {% if loop.last == false  %}
          {% if img.breakpoint matches '/^\\d+$/' %}
            <source srcset="{{img.src}}" media="(min-width: {{img.breakpoint}}px)">
          {% else %}
            <source srcset="{{img.src}}" media="{{img.breakpoint}}">
          {% endif %}
        {% endif %}
      {% endfor %}
      <img src="{{url|reverse|last.src}}" alt="{{alt}}" {% if loading %}loading="{{ loading }}"{% endif %}>
    </picture>
    {% if not ishero or ishero =='false' %}
      {% if credit %}
      <span class="{{prefix}}--credit">
        <span class="{{prefix}}--credit--label">{{credit}}</span>
      </span>
      {% endif %}
    {% endif %}
  </div>
  {% if caption %}
    <figcaption>{{caption}}</figcaption>
  {% endif %}
</figure>
