{# link.twig #}

{% if theme is not defined %}
  {% set theme = "light" %}
{% endif %}

<a class="{{prefix}}--link {{prefix}}--link__theme__{{theme}}" href="{{url}}"{% if target %} target={{target}}{% endif %}{% if target == "_blank" %} rel="noopener noreferrer"{% endif %}>
  {% if label %}
    <span>{{label}}</span>
  {% endif %}
</a>
