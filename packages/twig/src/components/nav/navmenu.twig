{# navmenu.twig #}

{% set prefix = prefix|default('ilo') %}
{% set base_class = prefix ~ '--nav-menu' %}

<div class="{{ base_class }} {{ className|default('') }}">
  <ul class="{{ base_class }}__list">
    {% for item in menu %}
      <li class="{{ base_class }}__item">
        <a href="{{ item.href }}" class="{{ base_class }}__link {% if item.isActive %}{{ base_class }}__link--active{% endif %} {{ item.className|default('') }}">
          {{ item.label }}
        </a>
      </li>
    {% endfor %}
  </ul>
  {% if more %}
    <button
      class="{{ base_class }}__more {% if more.isOpen %}{{ base_class }}__more--open{% endif %}"
      aria-expanded="{{ more.isOpen ? 'true' : 'false' }}"
      aria-haspopup="menu"
    >
      {{ more.label }}
    </button>
  {% endif %}
</div>
