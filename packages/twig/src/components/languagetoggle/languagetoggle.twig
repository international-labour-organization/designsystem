{# language-toggle.twig #}

{% set hideicon = hideicon|default(false) %}
{% set theme = theme|default("light") %}

<div class="{{ prefix }}--language-toggle {{ prefix }}--language-toggle__theme__{{ theme }}" data-prefix="{{prefix}}" data-loadcomponent="LanguageToggle">
    <button class="{{ prefix }}--language-toggle--container" aria-expanded="false" aria-controls="{{prefix}}--language-toggle--context-menu">
      {% if not hideicon %}
        <span class="{{ prefix }}--language-toggle--icon"></span>
      {% endif %}
      <span class="{{ prefix }}--language-toggle--action">{{ language }}</span>
      <span class="{{ prefix }}--language-toggle--arrow"></span>
    </button>
    <div role="menu" class="{{ prefix }}--language-toggle--context-menu" id="{{prefix}}--language-toggle--context-menu" hidden>
      {% if links %}
        {% include "@components/contextmenu/contextmenu.twig" with {
          links: links,
          prefix: prefix,
        } only %}
      {% endif %}
    </div>
</div>
