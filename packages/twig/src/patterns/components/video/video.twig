<figure class="{{prefix}}--video" data-prefix="{{prefix}}"">
  <div class="{{prefix}}--video--wrapper">
    {% include "@components/video/videoplayer.twig" with {
      alt: alt,
      controls: video.controls,
      prefix: prefix,
