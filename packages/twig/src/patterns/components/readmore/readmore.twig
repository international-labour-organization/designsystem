{#
  READ MORE COMPONENT
#}
{% set content = excerpt %}
{% set btnlabel = buttonlabel.closed %}
{% if openatstart|boolval %}
  {% set content = fulltext %}
  {% set btnlabel = buttonlabel.opened %}
{% endif %}

<div class="{{prefix}}--read-more" data-excerpt="{{excerpt|escape}}" data-fulltext="{{fulltext|escape}}" data-closed="{{buttonlabel.closed}}" data-opened="{{buttonlabel.opened}}" data-loadcomponent="ReadMore" data-prefix="{{prefix}}">
  {% include "@components/richtext/richtext.twig" with {
    content: content,
  } %}
  <button class="{{prefix}}--read-more--button">{{btnlabel}}</button>
</div>
