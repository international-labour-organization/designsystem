{#
  MULTILINK CARD COMPONENT
#}

<div class="{{prefix}}--card {{prefix}}--card__type__multilink {{prefix}}--card__action {{prefix}}--card__layout__{{layout}} {% if isvideo %} {{prefix}}--card__isvideo {% endif %} {% if linklist %} {{prefix}}--card__linklist {% endif %} {% if layout == "wide" %} {{prefix}}--card__align__{{alignment}} {% endif %}">
  <a class="{{prefix}}--card--link" href="{{link}}" title="{{title}}">
    <span class="{{prefix}}--card--link--text">{{title}}</span>
  </a>
  <div class="{{prefix}}--card--wrap">
    <div class="{{prefix}}--card--image--wrapper">
      {% include "@components/picture/picture.twig" with {
        image: image,
        class: "card"
      }
      %}
    </div>
    <div class="{{prefix}}--card--content">
      {% if title %}
        <h5 class="{{prefix}}--card--title">{{title}}</h5>
      {% endif %}
      {% if image %}
        <div class="{{prefix}}--card--image--wrapper">
          {% include "@components/picture/picture.twig" with {
            image: image,
            class: "card"
          }
          %}
        </div>
      {% endif %}
      {% if intro %}
        <p class="{{prefix}}--card--intro">{{intro}}</p>
      {% endif %}
      {% if linklist %}
        {% include "@components/linklist/linklist.twig" with {
          headline: linklist.headline,
          linkgroup: linklist.linkgroup,
          prefix: prefix
        } only %}
      {% endif %}
    </div>
  </div>
</div>
