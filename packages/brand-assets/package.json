{
  "name": "@ilo-org/brand-assets",
  "description": "Brand assets from ILO's Design System",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/international-labour-organization/designsystem.git",
    "directory": "packages/brand-assets"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "author": "@justintemps",
  "license": "Apache-2.0",
  "files": [
    "dist"
  ],
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js",
      "default": "./dist/cjs/index.js"
    },
    "./*": "./dist/assets/*"
  },
  "scripts": {
    "build": "rollup -c",
    "build:lib": "pnpm build",
    "build:docs": "pnpm build",
    "format": "prettier --check . --ignore-path ../../.prettierignore",
    "format:fix": "prettier --write . --ignore-path ../../.prettierignore",
    "lint": "eslint --ext .js,.ts,.tsx",
    "lint:fix": "eslint --ext .js,.ts,.tsx --fix"
  },
  "devDependencies": {
    "@ilo-org/eslint-config": "workspace:*",
    "@ilo-org/prettier-config": "workspace:*",
    "@ilo-org/typescript-config": "workspace:*",
    "@types/node": "^17.0.45",
    "@web/rollup-plugin-import-meta-assets": "^1.0.7",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-typescript2": "^0.34.1"
  }
}
