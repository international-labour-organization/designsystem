    "ui_patterns",
    "prototyping",
    "react",
    "designsystem",
    "components"
  ],
  "files": [
    "lib/**/*"
  ],
  "type": "module",
  "contributors": [
    {
      "name": "Justin Smith",
      "email": "smithj@ilo.org",
