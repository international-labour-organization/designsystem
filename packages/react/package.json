    "tslib": "^2.3.1",
    "webpack": "^5.68.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build-test": "react-scripts build",
    "test": "SKIP_PREFLIGHT_CHECK=true react-scripts test --setupFilesAfterEnv ./setup.ts",
    "eject": "react-scripts eject",
    "storybook": "start-storybook -p 6006",
    "storybook:static": "http-server ./storybook-static",
    "build": "pnpm run build:rollup && npm run build:storybook",
    "build:storybook": "build-storybook",
    "build:rollup": "rollup -c",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
