  "license": "Apache-2.0",
  "main": "lib/index.js",
  "module": "lib/index.esm.js",
  "types": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/international-labour-organization/designsystem.git",
    "directory": "packages/react"
  },
  "dependencies": {
    "@ilo/brand-assets": "workspace:*",
