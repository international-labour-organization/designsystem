  "include": ["src/**/*"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "es2017"],
    "types": ["node"],
    "declaration": true,
    "declarationDir": "lib/types"
  },
  "exclude": [
    "node_modules",
    "lib",
    "storybook-static",
    "src/stories",
    "**/*.args.ts",
    "scripts",
    "vitest.setup.ts"
  ]
}
