{
  "extends": "@ilo-org/typescript-config",
  "include": ["src/**/*"],
  "compilerOptions": {
    "types": ["node"],
    "declaration": true,
    "declarationDir": "lib/types"
  },
  "exclude": [
    "node_modules",
    "lib",
    "storybook-static",
    "src/stories",
    "src/__tests__",
    "**/*.args.ts",
    "src/setup.ts",
    "scripts"
  ]
}
